{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
    {% if error %}
        <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
    {% endif %}
    <form action="{{ path("fos_user_security_check") }}" method="post">


        <!-- LOGIN FORM -->
        <div class="text-center" style="padding:50px 0">
            <div class="logo"><h3>{{ 'Connexion' |trans}}</h3></div>
            <hr>
            <!-- Main Form -->
            <div class="login-form-1">
                <form id="login-form" class="text-left">
                    <div class="login-form-main-message"></div>
                    <div class="main-login-form">
                        <div class="login-group">
                            <div class="form-group">
                                <label for="username"
                                       class="sr-only"><strong>{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}
                                        :</strong></label>
                                <input type="text" class="form-control" id="username" name="_username"
                                       value="{{ last_username }}" placeholder="{{ 'Pseudo'|trans }}"
                                       required="required"/>
                            </div>
                            <div class="form-group">
                                <label for="password"
                                       class="sr-only"><strong>{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}
                                        :</strong></label>
                                <input type="password" class="form-control" id="password" name="_password"
                                       placeholder="{{ 'Mot de passe'|trans }}" required="required"/>
                            </div>
                            <div class="form-group login-group-checkbox">
                                <input type="checkbox" id="remember_me" name="_remember_me" value="on">
                                <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
                            </div>
                        </div>
                        <input type="submit" id="_submit" name="_submit"
                               value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}"/></div>
                    <div class="etc-login-form">
                        <br>
                        <p>{{ 'Nouveau ?'|trans }} <a href="{{ path('fos_user_registration_register') }}">{{ 'Inscrivez vous !'|trans }}</a></p>
                    </div>
                </form>
            </div>
            <!-- end:Main Form -->
        </div>
    </form>
{% endblock fos_user_content %}
