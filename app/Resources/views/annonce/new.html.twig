{% extends "FunnyTripBundle::layout.html.twig" %}

{% block title %}
    Publier un trajet | {{ parent() }}
{% endblock %}

{% block body %}

    <div id="top" class="row">
        <div class="page-header col-md-12">
            <br>
            <h2>Publier une annonce</h2>
            <hr/>
        </div>
    </div>



    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    {% for type, flashMessages in app.session.flashbag.all() %}
                        {% for flashMessage in flashMessages %}
                            <div class="alert alert-{{ type }}">
                                {{ flashMessage|raw }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                </div>
            </div>


            {{ form_start(form) }}
            {{ form_widget(form) }}
            <p>
                <button type="submit" name="submit" value="saveAndAdd" class="btn btn-primary">
                    Ajouter
                </button>
            </p>


            {{ form_end(form) }}



    </div>


{% endblock %}

