                                    <th>{{ macros.th_sortable('villeArrivee',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'annonce') }}</th>
                                    <th>{{ macros.th_sortable('prix',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'annonce') }}</th>
                                    <th>{{ macros.th_sortable('nbPlaceMax',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'annonce') }}</th>
                                    <th>{{ macros.th_sortable('description',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'annonce') }}</th>


                                    <th width="130px">List</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for annonce in annonces %}
