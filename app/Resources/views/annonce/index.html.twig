                                        <td>{%- if annonce.dateDepart %}{{ annonce.dateDepart|date('Y-m-d H:i:s') }}{% endif %}</td>
                                        <td>{%- if annonce.dateArrivee %}{{ annonce.dateArrivee|date('Y-m-d H:i:s') }}{% endif %}</td>
                                        <td>{{ annonce.villeDepart }}</td>
                                        <td>{{ annonce.villeArrivee }}</td>
                                        <td>{{ annonce.prix }}</td>
                                        <td>{{ annonce.nbPlaceMax }}</td>
