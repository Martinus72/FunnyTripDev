{% extends "FunnyTripBundle::layout.html.twig" %}

{% block title %}
    Annonces | {{ parent() }}
{% endblock %}

{% block body %}


    <div class="row">
        <div class="col-md-12">
            <div class="page-header">
                <br>
                <h2>Liste des annonces</h2>
                <hr/>
            </div>
        </div>

        <!-- FILTERING -->
        <div class="col-md-12">
            <div id="filters" class="collapse">

                <form class="well" action="{{ path('annonce') }}" method="get">
                    <div class="row">

                        <div class="col-md-6">{{ form_row(filterForm.dateDepart) }}</div>

                        <div class="col-md-6"></div>

                        <div class="col-md-6">{{ form_row(filterForm.villeDepart) }}</div>


                        <div class="col-md-6">{{ form_row(filterForm.villeArrivee) }}</div>


                        <div class="col-md-6">{{ form_row(filterForm.prix) }}</div>


                        <div class="col-md-6">{{ form_row(filterForm.nbPlaceMax) }}</div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <button type="submit" class="btn btn-warning" name="filter_action" value="filter">
                                    Filtrer
                                </button>
                                <button type="submit" class="btn btn-danger" name="filter_action" value="reset">
                                    Reset
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- END FILTERING -->

        <div class="col-md-3">
            <a class="btn dropdown-toggle pull-right h3" data-toggle="collapse" data-target="#filters">
                Filtre
                <span class="caret"></span>
            </a>
        </div>


        <div class="col-md-12">
            {%- if form_errors(filterForm) %}
                <div class="alert alert-block alert-error fade in form-errors">
                    {{ form_errors(filterForm) }}
                </div>
            {% endif %}
        </div>

    </div> <!-- /#top -->


    <div class="row">
        <div class="col-md-12">
            {% for type, flashMessages in app.session.flashbag.all() %}
                {% for flashMessage in flashMessages %}
                    <div class="alert alert-{{ type }}">
                        {{ flashMessage|raw }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </div>


    <div class="row">

        <div class="table-responsive col-md-12">


            {#On liste toutes les annonces#}
            {% for annonce in annonces %}

                <div class="list-group">
                    <a href="{{ path('annonce_show', { 'id': annonce.id }) }}"
                       class="list-group-item list-group-item-action flex-column align-items-start">
                        <div class="d-flex w-100 justify-content-between">
                            <h4 class="mb-1">{{ annonce.villeDepart }} -> {{ annonce.villeArrivee }}</h4>
                            <small>Publié le {{ annonce.date| date('d/m/Y') }}</small>
                        </div>
                        <p class="mb-1">{{ annonce.dateDepart| date('l  d F  Y') }}
                            à {{ annonce.dateDepart| date('H:i') }}</p>
                        <p><span class="badge badge-default badge-pill">{{ annonce.prix }} €</span>
                            <small> | {{ annonce.nbPlaceMax }} siège(s)</small>
                        </p>

                    </a>
                </div>

            {% endfor %}

            {#                <table class="table table-striped table-hover table-bordered" cellspacing="0" cellpadding="0">
                                <thead>
                                <tr>
                                    {% import "PetkoparaCrudGeneratorBundle::macros/th_sortable.html.twig" as macros %}
